[user]
	name = Philipp Hanslovsky
	email = philipp.hanslovsky@gmail.com
[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
   l = log --graph --all --format=format:'%C(cyan)%h%C(reset) - %C(green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold red bold)%d%C(reset)' --abbrev-commit --date=relative
   d = difftool --tool=ec --no-prompt
   s = status -s
   c = commit -am
   r = checkout
[core]
	excludesfile = ~/.gitignore
	
[push]
	default = upstream
[gui]
	fontdiff = -family \"Noto Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[pull]
	ff = only
[init]
	defaultBranch = main
