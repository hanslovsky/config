LOCAL_NAME='local'
HOSTNAME=`hostname`
if [ "${HOSTNAME/.int.janelia.org}" = "$HOSTNAME" ];
then
    LOCAL_NAME='local'
else
    LOCAL_NAME='cluster'
fi

export LOCAL=$LOCAL_NAME

CPLEX_INCLUDE="$HOME/$LOCAL_NAME/ILOG/cplex/include"
CPLEX_LIB="$HOME/$LOCAL_NAME/ILOG/cplex/lib/x86-64_sles10_4.1/static_pic"

CONCERT_INCLUDE="$HOME/$LOCAL_NAME/ILOG/concert/include"
CONCERT_LIB="$HOME/$LOCAL_NAME/ILOG/concert/lib/x86-64_sles10_4.1/static_pic"

SITE_PACKAGES="$HOME/$LOCAL_NAME/lib/python2.7/site-packages"
DIST_PACKAGES="$HOME/$LOCAL_NAME/lib/python2.7/dist-packages"

GOOGLE_APP="$HOME/$LOCAL_NAME/google_appengine"

TEX_BIN_DIR="$HOME/$LOCAL_NAME/texlive/2012/bin/x86_64-linux"

export GIT_REPO_DIR=$HOME/git



### PATH Variablen
export C_INCLUDE_PATH="$CPLEX_INCLUDE:$CONCERT_INCLUDE:$HOME/$LOCAL_NAME/include:$C_INCLUDE_PATH"

export ILOG_LICENSE_FILE="$HOME/.ilog_license/acces.ilm"

export CPLUS_INCLUDE_PATH="$CPLEX_INCLUDE:$CONCERT_INCLUDE:$HOME/$LOCAL_NAME/include:/usr/include/mpi:$HOME/$LOCAL_NAME/include:$CPLUS_INCLUDE_PATH"

export LIBRARY_PATH="$CPLEX_LIB:$CONCERT_LIB:$HOME/$LOCAL_NAME/lib:$LIBRARY_PATH"

export PATH="$TEX_BIN_DIR:$GOOGLE_APP:$HOME/git/scripts:$HOME/$LOCAL_NAME/bin:/home/phil/scripts:$PATH"

export LD_LIBRARY_PATH="$HOME/$LOCAL_NAME/lib:$SITE_PACKAGES:$LD_LIBRARY_PATH"

CUDA_PARENT_DIR=/usr/local
CUDA_BASE_DIRS="$(find $CUDA_PARENT_DIR -maxdepth 1 -name 'cuda*' -type d)"
# check if CUDA_BASE_DIRS is not empty
if [[ -n "$CUDA_BASE_DIRS" ]]; then
   LATEST_CUDA_BASE_PATH="$(echo -e "$CUDA_BASE_DIRS" | sort -n  | tail -n1)"
   export PATH="$LATEST_CUDA_BASE_PATH/bin:$PATH"
   export LD_LIBRARY_PATH="$LATEST_CUDA_BASE_PATH/lib:$LATEST_CUDA_BASE_PATH/lib64:$LD_LIBRARY_PATH"
fi


export PYTHONPATH="$DIST_PACKAGES:$SITE_PACKAGES:$PYTHONPATH"

export EDITOR="emacsclient -c"
export ALTERNATE_EDITOR=""

export DEBEMAIL="Philipp.Hanslovsky@gmail.com"
export DEBFULLNAME="Philipp Hanslovsky"

export TERM=xterm-256color

# qtselector information
export QT_SELECT=4

# less (see man less for more details)
export LESS='-RS#3NM~g'
# -R:  output ANSI color escape sequences in raw form
# -S:  Toggle Chop long lines (defulat: fold)
# -#N: specify the horizontal scrolling step size to N
# -N:  show line numbers
# -M:  verbose prompt
# -~:  display lines after EOF as blank lines rather than tilde
# -g:  highlight only the particular string which was found by last search



unset CPLEX_INCLUDE
unset CPLEX_LIB

unset CONCERT_INCLUDE
unset CONCERT_LIB

unset SITE_PACKAGES

unset GOOGLE_APP
unset TEX_BIN_DIR
